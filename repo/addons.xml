      <import addon="xbmc.python" version="3.0.0"/>
      <import addon="script.module.requests"/>
      <import addon="script.module.pycryptodome"/>
  </requires>
  <extension point="xbmc.python.module" library="lib"/>
  <extension point="xbmc.addon.metadata">
      <summary lang="en_GB">Streamlink Library for Kodi</summary>
      <description lang="en_GB">Streamlink Library for Kodi. It is a collection of plugins to help resolve web page urls into streamable links. Known issue: Does not work on Xbox, specifically throws exception when trying to import something from ctypes module.</description>
      <platform>all</platform>
      <license>Simplified BSD</license>
      <website>https://syco.github.io/Cool-Stuff/repo/</website>
      <source>https://github.com/syco/script.module.streamlink/</source>
      <language>en</language>
      <assets>
          <icon>icon.png</icon>
      </assets>
  </extension>
</addon>

